{
  "name": "BV-2024-dashboard",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "dashboard-client",
    "dashboard-server",
    "libs",
    "tools"
  ],
  "scripts": {
    "kill:all": "chmod 755 tools/scripts/kill_local_apps.sh && sh tools/scripts/kill_local_apps.sh",
    "start:all": "docker-compose up -d && yarn kill:all && concurrently \" yarn workspace dashboard-client dev \" \" yarn workspace dashboard-server start:local \"",
    "build:client": "yarn workspace dashboard-client build",
    "start:client": "yarn workspace dashboard-client start",
    "dev:client": "yarn workspace dashboard-client dev",
    "start:server": "yarn workspace dashboard-server start:local",
    "db-migrate:local": "yarn workspace dashboard-server db-migrate:local",
    "db-migrate:local:create-only": "yarn workspace dashboard-server db-migrate:local:create-only",
    "db-migrate:local:status": "yarn workspace dashboard-server db-migrate:local:status",
    "prepare": "npm-run-all prepare:*",
    "prepare:husky": "husky install",
    "prepare:prisma": "yarn workspace dashboard-server prepare:prisma",
    "check-branch-name": "chmod 755 tools/scripts/check_branch_naming.sh && sh tools/scripts/check_branch_naming.sh",
    "lint-staged": "lint-staged --relative",
    "codegen:graphql": "graphql-codegen --config ./tools/graphql/graphql-codegen.ts"
  },
  "dependencies": {
    "@apollo/client": "3.7.11",
    "@apollo/server": "^4.9.5",
    "concurrently": "^8.2.2",
    "ethers": "5.6.4",
    "graphql": "^16.8.1",
    "graphql-request": "^6.1.0",
    "graphql-scalars": "^1.22.4",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "moment": "^2.30.1",
    "next": "13.4.4",
    "react": "18.2.0",
    "react-copy-to-clipboard": "^5.1.0",
    "react-dom": "18.2.0",
    "react-use": "^17.4.0",
    "universal-cookie": "^6.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.2.0",
    "@commitlint/config-conventional": "^18.1.0",
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/client-preset": "^4.1.0",
    "@trivago/prettier-plugin-sort-imports": "^4.2.1",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "conventional-changelog-atom": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.6.2"
  }
}
